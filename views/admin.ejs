<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">

	<title>淮师大校园二手网站</title>
	<link rel="stylesheet" href="../public/css/bootstrap.min.css">
	<link rel="stylesheet" href="../public/css/base.css">
	<link rel="stylesheet" href="../public/css/admin.css">
	<script src="../public/javascripts/jquery-3.2.1.min.js"></script>
	<script src="../public/javascripts/bootstrap.min.js"></script>
	<script src="../public/javascripts/admin.js"></script>
	<style>
		td img{
			width: 300px;
			height: 100px;
		}
	</style>
</head>
<body">
	<!-- 头部 -->
	<header>
		<nav class="navbar navbar-default" id="nav">
			  <div class="container-fluid">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			      <a class="navbar-brand" href="/">
			      	<img src="../public/images/logo1.png" alt="">
			      </a>
			    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			        <!-- <li class="active"><a href="#">Link </a></li> -->
			        <li><a href="#">后台管理</a></li>
			      </ul>
			      <ul class="nav navbar-nav navbar-right">
			        <li><a href="#">管理员设置</a></li>
			        <li><a href="#"><i class="glyphicon glyphicon-off"></i>退出</a></li>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			  </div><!-- /.container-fluid -->
        </nav>
		<!-- 背景图 -->
		<div class="container" id="h_con">
				<img src="../public/images/temp1.jpg" alt="">
		</div>
	</header>
	<!-- 标签页 -->
	<section class="container" id="pre">
		  <!-- Nav tabs -->
		  <ul class="nav nav-tabs col-sm-2" role="tablist">
		  	<li role="presentation">
		    	<a href="#home"  role="tab" data-toggle="tab" id="hsdlogo">
		    		<img src="../public/images/hsd.jpg" alt="">
		    	</a>
		    </li>
		    <li role="presentation" class="active">
		    	<a href="#home"  role="tab" data-toggle="tab"><i class="glyphicon glyphicon-home"></i>首页</a>
		    </li>
		    <li role="presentation"><a href="#profile" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-heart"></i>我要买</a></li>
		    <li role="presentation"><a href="#messages" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-thumbs-down"></i>我要卖</a></li>
		    <li role="presentation"><a href="#settings" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-send"></i>跳蚤市场</a></li>
		    <li role="presentation"><a href="#adm" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-wrench"></i>管理设置</a></li>
		    <li role="presentation"><a href="#settings" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-send"></i>跳蚤市场</a></li>
		    <li role="presentation"><a href="#adm" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-wrench"></i>管理设置</a></li>
		  </ul>

		  <!-- Tab panes -->
		  <section class="tab-content col-lg-10">
		    <div role="tabpanel" class="tab-pane active" id="home">
		    	<form class="form-horizontal" method="post" action="/adm/login" enctype="multipart/form-data">
		    	  <p class="col-sm-10">我的表单</p>
				  <div class="form-group">
				    <label for="inputEmail3" class="col-sm-2 control-label">标题</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="inputEmail3" placeholder="标题" name="title">
				    </div>
				  </div>
				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">描述</label>
				    <div class="col-sm-10">
				     <textarea class="form-control" rows="5" name="des"></textarea>
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <input type="file" class="form-control" id="inputEmail3" placeholder="文件" name="text">
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <input type="submit" class="btn btn-default">
				    </div>
				  </div>
				</form>
                <table class="table">
					<caption>banner数据</caption>
					<thead>
						<tr>
							<th>ID</th>
							<th>标题</th>
							<th>描述</th>
							<th>img</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						 <%
                            for(var i=0;i<data.length;i++){
                            %>
                            <tr>
                                <td class="col-lg-2">
                                    <%=data[i].ID%>
                                </td>
                                <td class="col-lg-2">
                                    <%=data[i].title%>
                                </td>
                                <td class="col-lg-2">
                                    <%=data[i].description%>
                                </td>
                                <td class="col-lg-4" >
                                    <img src="../public/upload/<%=data[i].src%>" alt="">
                                </td>
                                <td class="col-lg-2" height="200px">
                                    <a href="?act=del&id=<%=data[i].ID%>" onclick="return confirm('are you delete?')">删除</a>
                                </td>
                            </tr>
                            <%
                            }
                            %>
					</tbody>
				</table>
		    </div>
		    <div role="tabpanel" class="tab-pane" id="profile">我要买</div>
		    <div role="tabpanel" class="tab-pane" id="messages">...</div>
		    <div role="tabpanel" class="tab-pane" id="settings">...</div>
		    <div role="tabpanel" class="tab-pane" id="adm">...</div>
		  </div>
    </section>

</body>
</html>